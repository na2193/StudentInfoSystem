		  <!-- Add a form to enter students grades-->
		  
		  <div class="container">
				<div class="card card-newClass mx-auto mt-5">
					<div class="card-header mx-auto">Add Grades</div>
						<div class="card-body">
							<form action="/addGrades" method="POST"> 
							<div class="form-group">
								<div class="form-row">
								<div class="col-md-6">
									<div class="form-label-group">
									<input type="text" id="courseNumber" name="courseNumber" class="form-control" placeholder="Course number" required="required" autofocus="autofocus">
									<label for="courseNumber">Course number</label>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-label-group">
									<input type="text" id="courseName" name="courseName" class="form-control" placeholder="Course name" required="required">
									<label for="courseName">Course name</label>
									</div>
								</div>
								</div>
							</div>
					
							<div class="form-group">
							 <div class="form-row">
								<div class="col-md-6">
									<div class="form-label-group">
									<input type="text" id="semesterTerm" name="semesterTerm" class="form-control" placeholder="Semester term" required="required">
									<label for="semesterTerm">Semester term</label>
									</div>
								</div>
								 <div class="col-md-6">
									<div class="form-label-group">
									<input type="text" id="Teacher" name="Teacher" class="form-control" placeholder="Teacher" required="required">
									<label for="Teacher">Teacher</label>
									</div>
								</div>
								</div>
							</div>
							
							<div class="form-group">
							 <div class="form-row">
								<div class="col-md-6">
									<div class="form-label-group">
										<input type="text" id"midtermGrade" name="midtermGrade" class="form-control" placeholder="Midterm grade" required="required">
										<label for="midtermGrade">Midterm grade</label>
									</div>
								 </div>
								 <div class="col-md-6">
									<div class="form-label-group">
									<input type="text" id="finalGrade" name="finalGrade" class="form-control" placeholder="Final grade">
									<label for="finalGrade">Final grade</label>
									</div>
								</div>
								</div>
							</div>

							<div class="form-group">
							 <div class="form-row">
								<div class="col-md-4">
									<div class="form-label-group">
									<input type="text" id="creditHours" name="creditHours" class="form-control" placeholder="Credit hours" required="required">
									<label for="creditHours">Credit hours</label>
									</div>
								 </div>
								<div class="col-md-4">
									<div class="form-label-group">
									<input type="text" id="creditScore" name="creditScore" class="form-control" placeholder="Credit x Score" required="required" disabled="disabled">
									<label for="creditScore">Credit x Score </label>
									</div>
								</div>
								<div class="col-md-4">
									<div class="form-label-group">
									<input type="text" id="Score" name="Score" class="form-control" placeholder="Score" required="required" disabled="disabled">
									<label for="Score">Score </label>
									</div>
								</div>
								</div>	
							</div>
							
							
							
