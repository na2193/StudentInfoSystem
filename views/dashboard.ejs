    <div id="content-wrapper">
        <div class="container-fluid">
			<!-- Icon Cards-->
			<div class="row">
				<div class="col-xl-3 col-sm-6 mb-3">
				    <div class="card text-white bg-primary o-hidden h-100">
						<div class="card-body">
						<br>
							<a class="card-footer text-white clearfix medium z-1" href="newStudent">
								<span class="float-left">Add New Students</span>
								<span class="float-right">
									<i class="fas fa-angle-right"></i>
								</span>
							</a>
						</div>
					</div>
				</div>
				<div class="col-xl-3 col-sm-6 mb-3">
				    <div class="card text-white bg-warning o-hidden h-100">
						<div class="card-body">
						<br>
							<a class="card-footer text-white clearfix medium z-1" href="newClass">
								<span class="float-left">Add New Class</span>
								<span class="float-right">
									<i class="fas fa-angle-right"></i>
								</span>
							</a>
						</div>
					</div>
				</div>
				<div class="col-xl-3 col-sm-6 mb-3">
				    <div class="card text-white bg-success o-hidden h-100">
						<div class="card-body">
						<br>
							<a class="card-footer text-white clearfix medium z-1" href="viewSchedule.html">
								<span class="float-left">View All Schedules</span>
								<span class="float-right">
									<i class="fas fa-angle-right"></i>
								</span>
							</a>
						</div>
					</div>
				</div>
				<div class="col-xl-3 col-sm-6 mb-3">
				    <div class="card text-white bg-danger o-hidden h-100">
						<div class="card-body">
						<br>
							<a class="card-footer text-white clearfix medium z-1" href="searchStudentRecords">
								<span class="float-left">Student Info/Records</span>
								<span class="float-right">
									<i class="fas fa-angle-right"></i>
								</span>
							</a>
						</div>
					</div>
				</div>
				
			<!-- DataTables -->
			
			<div class="card mb-3" id="student-table">
				<div class="card-header">
					<i class="fas fa-table"></i>
					List Of Current Students</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
							<thead>
								<tr>
								  <th>Student ID</th>
								  <th>Name</th>
								  <th>Email</th>
								  <th>Phone Number</th>
								  <th>Date Of Birth</th>
									<th>Parent's Phone Number</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
								  <th>Student ID</th>
								  <th>Name</th>
								  <th>Email</th>
								  <th>Phone Number</th>
								  <th>Date Of Birth</th>
									<th>Parent's Phone Number</th>
								</tr>
							 </tfoot>
							<tbody>
								<tr>
									<% for(var i = 0; i < students.length; i++) { %>
								  <td><%= students[i].id %></td>
								  <td><%= students[i].firstName %> <%= students[i].lastName %></td>
								  <td><%= students[i].email %></td>
								  <td><%= students[i].phoneNumber %></td>
								  <td><%= students[i].dateOfBirth %></td>
								  <td><%= students[i].parentInfo.phoneNumber %></td>
								</tr>
							</tbody>
							<% } %>
						</table>
					</div>
				</div>
			</div>
        </div>
		<!-- Instrutor Tables -->
			<div class="card mb-3" id="student-table" style="float:left;">
					<div class="card-header">
						<i class="fas fa-table"></i>
						List Of Instructors
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
								<thead>
									<tr>
										<th>Instructor ID</th>
									  <th>Name</th>
									  <th>Profession</th>
									  <th>Office Location</th>
									  <th>Office Number</th>
									  <th>Email</th>
									</tr>
								</thead>
								<tfoot>
									<tr>
										<th>Instructor ID</th>
									  <th>Name</th>
									  <th>Profession</th>
									  <th>Office Location</th>
									  <th>Office Number</th>
									  <th>Email</th>
									</tr>
								 </tfoot>
										<tbody>
												<tr>
													<% for(var i = 0; i < instructors.length; i++) { %>
														<td><%= instructors[i].id %></td>
														<td><%= instructors[i].firstName %> <%= instructors[i].lastName %></td>
														<td><%= instructors[i].subjects %></td>
														<td><%= instructors[i].officeLocation %></td>
														<td><%= instructors[i].officeNumber %></td>
														<td><%= instructors[i].email %></td>
												</tr>
											</tbody>
											<% } %>
							</table>
						</div>
					</div>
				</div>

		</div>
