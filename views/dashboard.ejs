		<div id="wrapper">
			<!-- Sidebar --> <!-- NEED TO COME UP WITH NEW PAGES -->
			<ul class="sidebar navbar-nav">
				<li class="nav-item active">
					<a class="nav-link" href="dashboard">
						<i class="fas fa-fw fa-tachometer-alt"></i>
